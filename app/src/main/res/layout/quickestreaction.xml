<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playground2">
    <TextView
        android:id="@+id/timeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:textColor="#000000"
        android:textSize="60sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>



    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/startQuickestReactionbutton"
        android:src="@drawable/bluesplash"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:background="#e1bee7" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quickreactionmsg"
        android:id="@+id/QuickestReactionmsg"
        android:layout_below="@+id/timeCount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/timeCount"
        android:textColor="#14620e"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/finalScoreView"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:textStyle="bold"
        android:padding="1dp"
        android:textAlignment="center"
        android:background="#c8ffffff" />


</RelativeLayout>